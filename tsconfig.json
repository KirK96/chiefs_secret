{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "noUnusedLocals": true,
    "lib":[
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["src/app/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
